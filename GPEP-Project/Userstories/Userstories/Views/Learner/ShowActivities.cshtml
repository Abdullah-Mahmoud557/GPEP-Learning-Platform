@model IEnumerable<Userstories.Models.Learning_activities>

@{
    ViewData["Title"] = "Activities";
    var learnerId = ViewBag.LearnerID ?? 0;
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <button class="btn btn-success btn-lg me-2 px-4" onclick="location.href='/Courses/ ?courseId=@learnerId &learnerId=@learnerId" data-bs-toggle="tooltip" title="View highest score assessment">
                <i class="fas fa-trophy"></i> Highest Score
            </button>            <button class="btn btn-secondary" onclick="history.back()" data-bs-toggle="tooltip" title="Go back to the previous page">
                <i class="fas fa-arrow-left"></i> Go Back
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Activity Type</th>
                            <th scope="col">Instruction Details</th>
                            <th scope="col">Max Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var activity in Model)
                        {
                            <tr>
                                <td>@activity.ActivityType</td>
                                <td>@activity.InstructionDetails</td>
                                <td>@activity.MaxPoints</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>