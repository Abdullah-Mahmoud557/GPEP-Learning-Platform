@model IEnumerable<Userstories.Models.LearningPath>

<h2>Your Learning Paths</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Path ID</th>
        <th scope="col">Learner ID</th>
        <th scope="col">Profile ID</th>
        <th scope="col">Completion Status</th>
        <th scope="col">Custom Content</th>
        <th scope="col">Adaptive Rules</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var path in Model)
        {
            <tr>
                <td>@path.PathID</td>
                <td>@path.LearnerID</td>
                <td>@path.ProfileID</td>
                <td>@(path.CompletionStatus ?? "N/A")</td>
                <td>@(path.CustomContent ?? "N/A")</td>
                <td>@(path.AdaptiveRules ?? "N/A")</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center">No learning paths available.</td>
        </tr>
    }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Dashboard2" class="btn btn-success">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>