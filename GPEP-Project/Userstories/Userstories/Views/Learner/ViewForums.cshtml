@model IEnumerable<Userstories.Models.DiscussionForum>

<h2>Discussion Forums</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Forum ID</th>
        <th>Module ID</th>
        <th>Course ID</th>
        <th>Title</th>
        <th>Last Active</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var forum in Model)
    {
        <tr>
            <td>@forum.ForumID</td>
            <td>@forum.ModuleID</td>
            <td>@forum.CourseID</td>
            <td>@forum.Title</td>
            <td>@forum.LastActive.ToString("g")</td>
            <td>@forum.Description</td>
            <td>
                <a asp-action="ViewPosts" asp-route-forumId="@forum.ForumID" class="btn btn-info btn-sm">View Posts</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Dashboard2" class="btn btn-success">Back to Dashboard</a>