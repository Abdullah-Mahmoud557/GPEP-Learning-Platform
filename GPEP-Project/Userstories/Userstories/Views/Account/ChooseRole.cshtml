@{
    Layout = null;
    ViewData["Title"] = "Choose Your Login Role";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
<style>
    body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        color: #fff;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }
    .btn {
        font-size: 1.2rem;
        padding: 10px 20px;
        border-radius: 25px;
        transition: transform 0.2s, background-color 0.2s;
    }
    .btn:hover {
        transform: scale(1.05);
        opacity: 0.9;
    }
    .card-header {
        background: #1e3a8a;
        border-bottom: none;
        color: #fff;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }
    .card-footer {
        background: #1e293b;
        border-top: none;
        color: #d1d5db;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }
    a {
        color: #63b3ed;
        text-decoration: none;
    }
    a:hover {
        color: #90cdf4;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Select Your Role to Login</h3>
                </div>
                <div class="card-body text-center">
                    <a href="@Url.Action("Login", "Learner")" class="btn btn-success btn-block mb-3" aria-label="Login as Learner">
                        <i class="fas fa-user-graduate"></i> Login as Learner
                    </a>
                    <a href="@Url.Action("Login", "Instructor")" class="btn btn-warning btn-block mb-3" aria-label="Login as Instructor">
                        <i class="fas fa-chalkboard-teacher"></i> Login as Instructor
                    </a>
                    <a href="@Url.Action("Login", "Admin")" class="btn btn-primary btn-block mb-3" aria-label="Login as Admin">
                        <i class="fas fa-user-shield"></i> Login as Admin
                    </a>  </div>
                <div class="card-footer text-center">
                    <p>Don't have an account? <a href="@Url.Action("Signup", "Account")">Signup</a></p>
                </div>
              
            </div>
        </div>
    </div>
</div>