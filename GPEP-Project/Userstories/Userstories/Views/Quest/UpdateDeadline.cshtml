@model Userstories.Models.Collaborative

<!DOCTYPE html>
<html>
<head>
    <title>Update Deadline</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Update Deadline</h1>
    <form asp-action="UpdateDeadline" method="post">
        <input type="hidden" name="id" value="@Model.QuestID" />
        <div class="form-group">
            <label for="newDeadline">New Deadline</label>
            <input type="date" class="form-control" id="newDeadline" name="newDeadline" value="@Model.deadline.ToString()" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Update Deadline</button>
        <button type="button" class="btn btn-secondary mt-3" onclick="window.location.href='@Url.Action("InstructorIndex")'">Cancel</button>
        </form>
</div>
</body>
</html>