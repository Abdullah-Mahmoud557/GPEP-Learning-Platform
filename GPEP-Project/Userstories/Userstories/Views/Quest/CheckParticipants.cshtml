@model IEnumerable<Userstories.Models.LearnerParticipationViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Participants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Participants</h1>
    <button class="btn btn-secondary mb-3" onclick="window.location.href='@Url.Action("Dashboard2", "Learner")'">Go Back to Dashboard</button>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Learner ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Completion Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var learner in Model)
        {
            <tr>
                <td>@learner.LearnerID</td>
                <td>@learner.FirstName</td>
                <td>@learner.LastName</td>
                <td>@learner.CompletionStatus</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>