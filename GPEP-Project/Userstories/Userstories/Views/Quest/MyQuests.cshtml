@model IEnumerable<Userstories.Models.LearnerQuestViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>My Quests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">My Quests</h1>
    <button class="btn btn-secondary mb-3" onclick="window.location.href='@Url.Action("Dashboard2", "Learner")'">Go Back to Dashboard</button>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Difficulty Level</th>
            <th>Criteria</th>
            <th>Max Participants</th>
            <th>Deadline</th>
            <th>Completion Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var quest in Model)
        {
            <tr>
                <td>@quest.Quest.title</td>
                <td>@quest.Quest.description</td>
                <td>@quest.Quest.difficulty_level</td>
                <td>@quest.Quest.criteria</td>
                <td>@quest.Quest.max_num_participants</td>
                <td>@quest.Quest.deadline.ToString()</td>
                <td>@quest.CompletionStatus</td>
                <td>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="@Url.Action("CheckParticipants", "Quest", new { questId = quest.Quest.QuestID })" class="btn btn-info">Check Participants</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>