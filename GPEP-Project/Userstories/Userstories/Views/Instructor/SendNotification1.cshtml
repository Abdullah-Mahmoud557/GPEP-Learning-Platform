@model Userstories.Models.NotificationViewModel

@{
    ViewData["Title"] = "Send Notification";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Send Notification</h2>

    <form asp-action="SendNotification" method="post" class="shadow-sm p-4 bg-white rounded">
        <div class="form-group">
            <label asp-for="Message" class="control-label">Message</label>
            <textarea asp-for="Message" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="UrgencyLevel" class="control-label">Urgency Level</label>
            <select asp-for="UrgencyLevel" class="form-control">
                <option value="Normal">Normal</option>
                <option value="High">High</option>
                <option value="Critical">Critical</option>
            </select>
            <span asp-validation-for="UrgencyLevel" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="LearnerID" />
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Send Notification</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}