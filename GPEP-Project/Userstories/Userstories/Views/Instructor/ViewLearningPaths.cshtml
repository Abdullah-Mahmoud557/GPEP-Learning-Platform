<table class="table table-bordered table-striped">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Path ID</th>
        <th scope="col">Learner ID</th>
        <th scope="col">Profile ID</th>
        <th scope="col">Completion Status</th>
        <th scope="col">Custom Content</th>
        <th scope="col">Adaptive Rules</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        foreach (var path in Model)
        {
            <tr>
                <td>@path.PathID</td>
                <td>@path.LearnerID</td>
                <td>@path.ProfileID</td>
                <td>@(path.CompletionStatus ?? "N/A")</td>
                <td>@(path.CustomContent ?? "N/A")</td>
                <td>@(path.AdaptiveRules ?? "N/A")</td>
                <td>
                    <a asp-action="EditLearningPath" asp-route-id="@path.PathID" class="btn btn-warning btn-sm" title="Edit Path">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form asp-action="DeleteLearningPath" asp-route-id="@path.PathID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this path?');">
                        <button type="submit" class="btn btn-danger btn-sm" title="Delete Path">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7" class="text-center">No learning paths available.</td>
        </tr>
    }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="CreateLearningPath" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create Learning Path
    </a>
    <a asp-action="Dashboard2" class="btn btn-success">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

