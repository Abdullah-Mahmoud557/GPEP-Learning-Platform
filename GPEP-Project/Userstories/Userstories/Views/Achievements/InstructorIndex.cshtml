@model IEnumerable<Userstories.Models.Achievement>

<!DOCTYPE html>
<html>
<head>
    <title>Achievements</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Achievements</h1>
    <button class="btn btn-secondary mb-3" onclick="window.location.href='@Url.Action("Dashboard2", "Instructor")'">Go Back to Dashboard</button>
    <a href="@Url.Action("AddAchievement", "Achievements")" class="btn btn-primary mb-3">Add New Achievement</a>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Learner ID</th>
            <th>Badge ID</th>
            <th>Description</th>
            <th>Date Earned</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var achievement in Model)
        {
            <tr>
                <td>@achievement.LearnerID</td>
                <td>@achievement.BadgeID</td>
                <td>@achievement.description</td>
                <td>@achievement.date_earned</td>
                <td>@achievement.type</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>