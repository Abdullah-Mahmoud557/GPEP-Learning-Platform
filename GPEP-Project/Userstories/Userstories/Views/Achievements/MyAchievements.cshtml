@model IEnumerable<Userstories.Models.Achievement>

<!DOCTYPE html>
<html>
<head>
    <title>My Achievements</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">My Achievements</h1>
    <button class="btn btn-secondary mb-3" onclick="window.location.href='@Url.Action("Dashboard2", "Learner")'">Go Back to Dashboard</button>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Badge ID</th>
            <th>Badge Title</th>
            <th>Achievement Description</th>
            <th>Achievement Date Earned</th>
            <th>Achievement Type</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var achievement in Model)
        {
            <tr>
                <td>@achievement.Badge?.BadgeID</td>
                <td>@achievement.Badge?.title</td>
                <td>@achievement.description</td>
                <td>@achievement.date_earned?.ToString("yyyy-MM-dd")</td>
                <td>@achievement.type</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>